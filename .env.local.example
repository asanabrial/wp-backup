# Local configuration file - DO NOT COMMIT TO VERSION CONTROL
# Copy this file to .env.local and fill in your values

# WordPress domain (e.g., mysite.com)
WP_DOMAIN=

# WordPress installation path (e.g., /var/www/mysite.com)
WP_PATH=

# Temporary backup directory (optional, default: /tmp/wp-backup)
BACKUP_DIR=

# Google Drive backup folder (e.g., backup/mysite.com)
GDRIVE_FOLDER=

# OAuth credentials file (default: config/gdrive-credentials.json)
GDRIVE_CREDENTIALS_FILE=

# Days to retain backups (default: 7)
RETENTION_DAYS=

# Comma-separated emails to share with (optional)
SHARE_EMAILS=

# Sharing role: reader or writer (default: writer)
SHARE_ROLE=

# Make backup folder public: true or false (default: false)
MAKE_PUBLIC=

# Environment: development, staging, or production (default: production)
ENVIRONMENT=
