# Environment variables for WordPress Backup Tool
# Copy this file to .env.local and fill in your values

# WordPress Configuration
WP_DOMAIN=your-domain.com
WP_PATH=/var/www/your-domain.com
BACKUP_DIR=/tmp/wp-backup

# Google Drive Configuration
GDRIVE_FOLDER=backup/your-domain.com
GDRIVE_CREDENTIALS_FILE=config/gdrive-credentials.json
RETENTION_DAYS=7

# Sharing Configuration (comma-separated emails)
SHARE_EMAILS=your-email@example.com
SHARE_ROLE=writer
MAKE_PUBLIC=false

# Environment
ENVIRONMENT=production

# MySQL Configuration (optional - will be extracted from wp-config.php if not provided)
# DB_HOST=localhost
# DB_NAME=your_database
# DB_USER=your_user
# DB_PASSWORD=your_password
