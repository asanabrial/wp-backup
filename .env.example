# WordPress Backup Tool - Configuration Template
# Copy this file to .env.local and fill in your real values
# DO NOT put real credentials in this file

# WordPress Configuration
WP_DOMAIN=example.com
WP_PATH=/var/www/example.com
BACKUP_DIR=/tmp/wp-backup

# Google Drive Configuration  
GDRIVE_FOLDER=backups/example.com
GDRIVE_CREDENTIALS_FILE=config/gdrive-credentials.json
RETENTION_DAYS=7

# Sharing (comma-separated emails)
SHARE_EMAILS=admin@example.com
SHARE_ROLE=writer
MAKE_PUBLIC=false

# Environment
ENVIRONMENT=production
